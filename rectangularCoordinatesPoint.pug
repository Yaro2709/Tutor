doctype html
html(lang="ru")
    include ./templates/layout/head.pug  
    body
        include ./templates/layout/nav.pug
    
 
    
        main.container(role="main")
            div.row
                div.col-md-12    
                    div.card.mb-4.shadow-sm
                        div.card-body
                            h5.card-title Прямоугольные координаты на плоскости и точка
                            p.card-text.overflow-auto
                                module(id="task")
                            p
                                button.btn.btn-success(type="button", data-toggle="collapse", data-target="#rectangularCoordinatesPoint", aria-expanded="false", aria-controls="#rectangularCoordinatesPoint") Ответ
                            div.collapse(id="rectangularCoordinatesPoint")
                                div.card.card-body
                                    div.boxTikZ
                                        script(type="text/tikz", id="img")
                                    result(id="answer")
        script(type="text/javascript", src="scripts/BD/rectangularCoordinatesPoint.js")
    
    
    
    include ./templates/layout/footer.pug